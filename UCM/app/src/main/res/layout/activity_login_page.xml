<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <VideoView
        android:id="@+id/VideoView"
        android:layout_width="1280dp"
        android:layout_height="800dp"
        android:scaleX="1"
        app:layout_constraintStart_toStartOf="@+id/group2"
        app:layout_constraintTop_toTopOf="@+id/group2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:fontFamily="@font/sf_ui_display_black"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="#FFFFFDFD"
        android:textColorHighlight="#A440B5"
        android:textColorHint="#FFFFFDFD"
        android:textColorLink="#A440B5"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/sf_ui_display_black"
        android:text="User Character Model "
        android:textColor="#FDFDFD"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="400dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:fontFamily="@font/sf_ui_display_black"
        android:hint="@string/Login_pass_hint"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#FFFDFD"
        android:textColorHighlight="#A440B5"
        android:textColorHint="#FFFFFDFD"
        android:textColorLink="#A440B5"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="47dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/arrow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:theme="@style/AppTheme.Design"
        app:layout_constraintEnd_toStartOf="@+id/imageButton7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton7" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>