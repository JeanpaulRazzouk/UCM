<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:text="Welcome,"
            android:textColor="#5A5959"
            android:textSize="30dp" />


            <TextView
                android:id="@+id/welcome_name"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-65dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="50dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:layout_marginStart="1150dp"
                android:layout_marginTop="-150dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_settings" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:layout_marginStart="1050dp"
                android:layout_marginTop="-53dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:layout_marginStart="950dp"
                android:layout_marginTop="-53dp"
                android:background="@drawable/round_outline"
                android:scaleType="centerCrop" />

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="100dp">
            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view_2"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="700dp"
                android:layout_marginTop="-500dp">
            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>


            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view_3"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="700dp"
                android:layout_marginTop="100dp">
            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="564dp"
                android:layout_height="300dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-470dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="79% Have Been to Starbucks"
                android:textSize="50dp"
                android:textColor="@color/color4"
                android:layout_marginEnd="200dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="564dp"
                android:layout_height="300dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="200dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="32% Spending in United States "
                android:textColor="@color/color1"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="529dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-670dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="Biggest Share in Transactions"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="541dp"
                android:layout_height="61dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="250dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="Smallest Share in Transactions"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view_4"
                android:layout_width="750dp"
                android:layout_height="500dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="330dp">
            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="541dp"
                android:layout_height="61dp"
                android:layout_marginStart="820dp"
                android:layout_marginTop="-500dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="Highest Spending Store Share"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="481dp"
                android:layout_height="116dp"
                android:layout_marginStart="820dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="30dp" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>